<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.task.charge.MainActivity">


    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_back"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/gray_light"
                app:popupTheme="@style/AppTheme.PopupOverlay">


            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <include
                    android:id="@+id/feed"
                    layout="@layout/post_of_admin"></include>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TableRow
                        android:id="@+id/task_area_a"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/btn_all_task"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_team_members"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_dark_transparent"
                                android:fontFamily="@font/ts"
                                android:gravity="center_horizontal"
                                android:text="Lists of Tasks"
                                android:textColor="@color/white"
                                android:textSize="22dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_newtask"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_make_task"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_dark_transparent"
                                android:fontFamily="@font/ts"
                                android:gravity="center_horizontal"
                                android:text="New Task"
                                android:textColor="@color/white"
                                android:textSize="22dp" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/task_area_b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/btn_mytask"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_mytask"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_dark_transparent"
                                android:fontFamily="@font/ts"
                                android:gravity="center_horizontal"
                                android:text="My Task"
                                android:textColor="@color/white"
                                android:textSize="22dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_task_created"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_aboutus"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_dark_transparent"
                                android:fontFamily="@font/ts"
                                android:gravity="center_horizontal"
                                android:text="Tasks I Created"
                                android:textColor="@color/white"
                                android:textSize="22dp" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/project_area_a"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/btn_project"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/ico_project_list"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/label_project"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_dark_transparent"
                                android:fontFamily="@font/ts"
                                android:gravity="center_horizontal"
                                android:text="Project"
                                android:textColor="@color/white"
                                android:textSize="22dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_newproject"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/ico_make_project_disable"
                            android:clickable="false"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/label_newproject"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_dark_transparent"
                                android:fontFamily="@font/ts"
                                android:gravity="center_horizontal"
                                android:text="New Project"
                                android:textColor="@color/white"
                                android:textSize="22dp" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/project_area_b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/btn_task"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/ico_task"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/label_task"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_dark_transparent"
                                android:fontFamily="@font/ts"
                                android:gravity="center_horizontal"
                                android:text="Task"
                                android:textColor="@color/white"
                                android:textSize="22dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_create_member"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/ico_add_user_disable"
                            android:clickable="false"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/label_cteate_member"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_dark_transparent"
                                android:fontFamily="@font/ts"
                                android:gravity="center_horizontal"
                                android:text="Create Member"
                                android:textColor="@color/white"
                                android:textSize="22dp" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>

            </LinearLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/activity_main_drawer" />

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>